@model TaskMaster.Data.Models.Task

<div class="col-lg-4">
    <div class="task-card">
        <img class="img-thumbnail task-image" src="/img/TasksPicture.jpg">
        <div class="task-overlay">
            @if (Model.DeadlineDate >= DateTime.Now)
            {
                <a href="@Url.Action("Details", "Task", new { id = Model.Id })" class="task-overlay-text" style="text-decoration: none;">Подробнее</a>
            }
            else
            {
                <a href="@Url.Action("Details", "Task", new { id = Model.Id })" class="task-overlay-text" style="text-decoration: none;"><center>Задание закончилось<br>Подробнее</center></a>
            }
        </div>
    </div>
    <h2>@Model.Title</h2>
    <p>@Model.Description</p>
    <p>Оплата: @Model.Price.ToString()</p>
</div>

<style>
    .task-card {
        position: relative;
        overflow: hidden;
    }

    .task-image {
        transition: transform 0.4s, filter 0.5s;
    }

    .task-card:hover .task-image {
        transform: scale(1.3);
        filter: grayscale(100%);
    }

    .task-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.2);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.7s;
    }

    .task-card:hover .task-overlay {
        opacity: 1;
    }

    .task-overlay-text {
        color: white;
        font-size: 30px;
        font-weight: bold;
    }
</style>